<% content_for :index, '' %>
<% content_for :title, Article.find(8).description %>

<section id="content">
  <div class="full-width-container block-1">
    <div class="camera_container">
      <div id="camera_wrap">
        <% @sliders.each_with_index do |slider,i| %>
        <div class="item" data-src="/assets/index_img_slider-<%=i+1%>.jpg">
          <div class="camera_caption fadeIn">
            <h3><%= slider.title.html_safe %></h3>
            <p><span class="slider-title">&nbspСвяжитесь с нами&nbsp</span></p>
            <a href="/users#callfirm" class="btn bd-ra"><span class="fa fa-envelope-o"></span></a>
            <a href="/users#callfirm" class="btn bd-ra"><span class="fa fa-phone"></span></a>
            <a href="/users#mapfirm" class="btn bd-ra"><span class="fa fa-map-marker"></span></a>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <marquee behavior="scroll" direction="left" bgcolor="#727070" class="mar">
    <%=  @marquee.description.mb_chars.upcase.to_s if @marquee %>
  </marquee>
  <div class="full-width-container block-2">
    <div class="container">
      <div class="row">
        <div class="grid_12">
          <header>
            <h2><span><%= @head_description.title %></span></h2>
          </header>
          <h4><a href="#"><%= @head_description.slave %></a></h4>
          <p><%= @head_description.description.html_safe %></p>
          <a href="/users#callfirm" class="btn">Свяжитесь с нами</a>
        </div>
      </div>
    </div>
  </div>
  <div class="full-width-container block-3 parallax-block" data-stellar-background-ratio="0.5">
    <div class="container service">
      <div class="row">
        <div class="grid_12">
          <header>
            <h2><span>Услуги</span></h2>
          </header>
        </div>
        <% @services.each do |service|%>
        <div class="grid_3">
          <div class="element"><h4><a href="/services"><%= service.title %></a></h4></div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="full-width-container block-4">
    <div class="container">
      <div class="row">
        <div class="grid_12">
          <header>
            <h2><span>Наши клиенты</span></h2>
          </header>
        </div>
      </div>
      <div class="row">
        <div id="owl-carousel" class="owl-carousel">
          <% @clients.each do |client| %>
          <div class="grid_4">
            <div class="">
              <div class="img_container"><%= image_tag client.image.url if client.image_stored? %></div>
              <div class="owl-text carusel-title"><%= client.title %></div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="full-width-container block-5">
    <div class="container">
      <div class="row">
        <div class="grid_12">
          <header>
            <h2><span>Новости</span></h2>
          </header>
        </div>
        <div class="grid_12 news-block">
          <% @feed.each do |n|%>
            <article>
              <h4><%= "#{n.pubDate.day<=9?('0'+n.pubDate.day.to_s):n.pubDate.day}.#{n.pubDate.month}.#{n.pubDate.year}" %></h4>
              <a href="<%=n.link%>" target="_blank"><%= n.title %></a>
              <p><%= truncate strip_tags(n.description), :length => 270 %> <a href="<%=n.link%>" target="_blank">Читать далее →</a></p>
              <hr>
            </article>

          <% end %>
          <div class="all-news">
          <a href="<%=@rss.slave%>" class="big-link" target="_blank"><%= @rss.title %></a> </div>
        </div>
      </div>
    </div>
  </div>
 </section>